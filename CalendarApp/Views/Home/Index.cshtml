
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/calendar-style.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="container">
            <div id="form">
                <div>
                    <div class="form-group">
                        <label for="startDate">Start Date</label>
                        <input type="text" class="form-control" id="startDate" placeholder="MM/dd/YYYY" value="5/21/2018">
                    </div>
                    <div class="form-group">
                        <label for="numberDays">Number of days</label>
                        <input type="number" class="form-control" id="numberDays" placeholder="Number of days to display" value="33">
                    </div>
                    <div class="form-group">
                        <label for="numberDays">Country Code</label>
                        <input type="text" class="form-control" id="countryCode" placeholder="Country Code" value="US">
                    </div>
                    <button type="button" class="btn btn-default" id="btnCreate">Generate</button>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <button type="button" class="btn btn-default" id="btnBack">Go Back</button>
                </div>

                <div class="calendar-wrapper">
                </div>
            </div>
        </div>

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/Scripts/jsCalendar.js"></script>
    <script src="~/Scripts/jsIndex.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            HomePage.init();
        });

    </script>
</body>
</html>
